<h2><%= @user.username %>'s Workouts</h2>
<% if @user.workouts.empty? %>
    <h4>You currently have no workouts.</h4>
<% else %>
    <table align="center">
        <tr>
            <th>Date</th>
            <th>Activity Description</th>
            <th>Duration</th>
            <th>View Workout</th>
        </tr>
        <% @user.workouts.each do |workout| %>
            <tr>
                <td><%= workout.date %></td>
                <td><%= workout.activity_description %></td>
                <td><%= workout.duration %></td>
                <td><a href="/workouts/<%= workout.id %>">Link</a></td>
            </tr>
    <% end %>
    </table>
    <br></br>
<% end %>