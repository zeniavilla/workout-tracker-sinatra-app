<table align="center">
    <tr>
        <th>Date</th>
        <th>Activity Description</th>
        <th>Duration</th>
        <th></th>
        <th></th>
    </tr>
        <tr class="workout">
            <td><%= @workout.date %></td>
            <td><%= @workout.activity_description %></td>
            <td><%= @workout.duration %></td>
            <td><a href="/workouts/<%= @workout.id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
            <td>
                <form action="/workouts/<%= @workout.id %>/delete" method="POST">
                    <input id="hidden" type="hidden" name="_method" value="delete">
                    <button type="submit"><i class="fa fa-trash-o fa-2x" aria-hidden="true"></i></button>
                </form>
            </td>
        </tr>
</table>