<table>
    <tr>
        <th>Date</th>
        <th>Activity Description</th>
        <th>Duration</th>
        <th></th>
    </tr>
        <tr>
            <td><%= @workout.date %></td>
            <td><%= @workout.activity_description %></td>
            <td><%= @workout.duration %></td>
            <td><a href="/workouts/<%= @workout.id %>/edit">Edit</a></td>
        </tr>
</table>

<div class="success">
    <% if flash.has?(:success_added) %>
        <br></br>
        <%= flash[:success_added] %>
    <% elsif flash.has?(:success_edited) %>
        <br></br>
        <%= flash[:success_edited] %>
    <% end %>
</div>

