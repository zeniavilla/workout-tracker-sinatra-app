<!doctype html>

<html lang="en">
<head>
    <meta charset="UTF-8">

    <title>Workout Tracker</title>
    <meta name="description" content="Workout Tracker">
    <meta name="author" content="Zenia Villa">
    <script src="https://use.fontawesome.com/2587b50638.js"></script>
</head>

<body>
    <div id="main">
        
        <div class="navbar">
            <ul>
            <li><h2>Workout Tracker</h2></li>
            <% if logged_in? %>
                
                    <li><a href="/workouts/new">Add Workout</a></li>
                    <li><a href="/workouts/index">View Workouts</a></li>
                    <li class="signout"><a href="/users/signout">Sign Out</a></li>
                
            <% else %>
                
                    <li><a href="/users/signin">Sign In</a></li>
                    <li><a href="/users/signup">Sign Up</a></li>
                </ul>
            <% end %>
        </div>

        
        <div class="error">
            <% if flash.has?(:error) %>
                <%= flash[:error] %>
            <% end %>
        </div>
        <div class="success">
            <% if flash.has?(:success) %>
                <%= flash[:success] %>
                <% end %>
            <br></br>
        </div>
        
        <%= yield %>
    </div>
</body>
</html>


